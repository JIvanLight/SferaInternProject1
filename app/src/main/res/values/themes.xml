<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SferaInternProject1" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_200</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorSecondary">@color/primary_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorPrimarySurface">@color/surface</item>
        <item name="colorOnBackground">@color/on_surface</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColor">@color/on_surface</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnSecondary</item>
    </style>

    <style name="ShapeAppearanceOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearance.SferaInternProject1.RoundedCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <!-- Text Appearance. -->

    <style name="TextAppearance.SferaInternProject1.TextH6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/text_h6</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name ="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.SferaInternProject1.TextH5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/inter_medium</item>
        <item name ="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.SferaInternProject1.TextBody2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/inter_regular</item>
        <item name ="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.SferaInternProject1.TextSubtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/inter_regular</item>
        <item name ="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.SferaInternProject1.TextSubtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/inter_medium</item>
        <item name ="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.SferaInternProject1.TextCaption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/inter_regular</item>
        <item name ="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.SferaInternProject1.TextButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/inter_medium</item>
        <item name ="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.017</item>
    </style>

    <!-- Widgets. -->

    <style name="Widget.SferaInternProject1.TextButton1" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primary_200</item>
        <item name="android:textAppearance">@style/TextAppearance.SferaInternProject1.TextBody2</item>
    </style>

    <style name="Widget.SferaInternProject1.Button1" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/elevation_04</item>
        <item name="strokeColor">@color/primary_200</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/on_surface</item>

        <item name="android:textAppearance">@style/TextAppearance.SferaInternProject1.TextButton</item>
    </style>

    <style name="Widget.SferaInternProject1.InputLayout1" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">@color/primary_200</item>
        <item name="android:textAppearance">@style/TextAppearance.SferaInternProject1.TextCaption</item>
        <item name="hintTextAppearance">@style/TextAppearance.SferaInternProject1.TextCaption</item>
        <item name="android:textColorHint">@color/on_surface_medium_emphasis</item>
        <item name="hintTextColor">@color/on_surface_medium_emphasis</item>
        <item name="boxStrokeColor">@color/on_surface_medium_emphasis</item>
        <item name="boxBackgroundColor">@color/surface</item>
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">@dimen/max_length_about_me</item>
        <item name="counterTextColor">@color/on_surface_medium_emphasis</item>
        <item name="endIconMode">clear_text</item>
        <item name="backgroundTint">@color/background</item>
    </style>

    <style name="Widget.SferaInternProject1.TextInput1" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:textAppearance">@style/TextAppearance.SferaInternProject1.TextSubtitle1</item>
    </style>

    <style name="Widget.SferaInternProject1.Switch1" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.SferaInternProject1.Switch1</item>
    </style>

    <style name="ThemeOverlay.SferaInternProject1.Switch1" parent="">
        <item name="thumbTint">@color/on_surface_medium_emphasis</item>
        <item name="colorOnSurface">@color/on_surface_disable</item>
    </style>


</resources>